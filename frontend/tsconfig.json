{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@consumer/*": ["src/consumer/*"],
      "@seller/*": ["src/seller/*"],
      "@manager/*": ["src/manager/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src"]
}
